{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Nodejs CRUD",
    "description": "learning nodejs",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "host": "localhost:1000",
  "basePath": "/",
  "tags": [
    {
      "name": "Users",
      "description": "API for users in the system"
    }
  ],
  "schemes": ["http"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "securityDefinitions": {
    "bearerAuth": {
      "type": "apiKey",
      "name": "authorization",
      "scheme": "bearer",
      "in": "header"
    }
  },
  "paths": {
    "/user": {
      "get": {
        "tags": ["Users"],
        "summary": "Get all users in system",
        "security": [
          {
            "bearerAuth": "-[]"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Users"
            }
          }
        }
      },
      "post": {
        "tags": ["Users"],
        "summary": "Create a new user",
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "description": "User that we want to create",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Users"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "User": {
      "required": ["fname", "lname"],
      "properties": {
        "_id": {
          "type": "integer",
          "uniqueItems": true
        },
        "type": {
          "type": "string",
          "enum": ["USANZWE", "ADMIN"]
        },
        "fname": {
          "type": "string"
        },
        "lname": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    },
    "Users": {
      "type": "array",
      "$ref": "#/definitions/User"
    }
  }
}
